<li class="card-item col-xs-12 episode-{{episode_number}} season-{{season}} {{filter_id}}" data-id="{{filter_id}}">
    <div class="wrapper">
        <div class="rank-column background-theme">
            <div class="rank-wrapper">
                <div class="rank"><span class="overall-rank">{{rank}}</span><span class="season-rank">{{season_ranking}}</span></div>
                <div class="episode">Episode {{episode_number}}</div>
                <div class="non-mobile">
                    <hr class="third-width" />
                    <div class="director">
                        <span>Directed by</span>
                        <span>{{director}}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="image-column">
            <div class="image">
                <img data-src="img/episodes/episode-{{episode_number}}.jpg" alt="{{name}}" />
                <!-- <img src="img/episodes/episode_1.png" alt="{{title}}" /> -->
                <div class="frame"></div>
            </div>
        </div>
        <div class="info-column">
            <div class="main-content">
                <div class="title">
                    {{title}}
                </div>
                <div class="is-mobile-block text-center mobile-director">
                    <hr class="fifth-width" />
                    <div class="director">
                        Directed by {{director}}
                    </div>
                </div>
                <div class="blurb">
                    {{{blurb}}}
                </div>
                <div class="author">
                    &#8212; {{blurb_writer}}
                </div>
                <div class="shares">
                    <a class="share facebook" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https://thrones.theringer.com?episode={{episode_number}}">Share on Facebook</a>
                    <a class="share twitter" target="_blank" href="https://twitter.com/intent/tweet?url=https://thrones.theringer.com?episode={{episode_number}}&text=Where%20%22Episode%20{{encoded_title}}%22%20ranks%20among%20%27Game%20of%20Thrones%27%20episodes%20">Share on Twitter</a>
                </div>
            </div>
            <div class="item-footer">
                <div class="winner">
                    <strong>Episode Winner</strong> <span>{{winner}}</span>
                </div>
                <div class="podcast">
                    <a href="{{podcast_link}}" target="_blank"><span>&lsquo;Binge Mode&rsquo; Episode {{podcast_episode_number}}</span>&nbsp;<span class="arrow"></span></a>
                </div>
            </div>
        </div>
    </div>
</li>
